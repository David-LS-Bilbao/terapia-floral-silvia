---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";

// @ts-ignore
const BASE = ((import.meta as any).env?.BASE_URL ?? "/").replace(/\/+$/, "/");
// @ts-ignore
const link = (p="") => `${BASE}${p.replace(/^\/+/, "")}`;

const whatsapp = "https://wa.me/34687235652?text=Hola%20Silvia%2C%20me%20gustar%C3%ADa%20informaci%C3%B3n%20sobre%20tarifas%20y%20servicios.";

const servicios = [
  {
    nombre: "Sesión de Flores de Bach",
    descripcion: "Consulta personalizada con elaboración de preparado floral adaptado a tu situación emocional.",
    duracion: "60 minutos",
    precio: "58€",
    modalidad: "Presencial u online"
  },
  {
    nombre: "Sesión de Mindfulness",
    descripcion: "Práctica guiada de atención plena con técnicas de gestión emocional y reducción del estrés.",
    duracion: "60 minutos",
    precio: "58€",
    modalidad: "Presencial u online"
  },
  {
    nombre: "Sesión Combinada (Flores + Mindfulness)",
    descripcion: "Integración de terapia floral y práctica de mindfulness para un acompañamiento completo.",
    duracion: "90 minutos",
    precio: "95€",
    modalidad: "Presencial u online"
  },
  {
    nombre: "Bono 4 Sesiones",
    descripcion: "Pack de 4 sesiones con precio reducido. Válido durante 2 meses.",
    duracion: "4 x 60 minutos",
    precio: "195€ (48,75€/sesión)",
    modalidad: "Presencial u online"
  },
  {
    nombre: "Esencias Florales (seguimiento)",
    descripcion: "Preparado floral personalizado para el seguimiento de tu terapia. Incluye envío.",
    duracion: "Tratamiento completo",
    precio: "12€",
    modalidad: "Envío a domicilio"
  }
];
---

<Base 
  title="Tarifas y Servicios — Terapias Naturales Silvia Adame" 
  description="Descubre nuestros servicios de Flores de Bach y Mindfulness. Consulta tarifas, modalidades y programas de acompañamiento emocional.">
  <Nav />
  
  <main class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-10 md:py-14">
    <!-- Cabecera -->
    <header class="mb-10 text-center">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900">Servicios y Tarifas</h1>
      <p class="mt-4 text-lg text-neutral-600 max-w-2xl mx-auto">
        Elige el servicio que mejor se adapte a tus necesidades. Todas las sesiones incluyen seguimiento personalizado.
      </p>
    </header>

    <!-- Lista de servicios -->
    <div class="space-y-6">
      {servicios.map((servicio, index) => (
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-black/5 p-6 md:p-8 hover:shadow-md transition-shadow">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
            <div class="flex-1">
              <h2 class="text-2xl font-semibold text-slate-900 mb-2">
                {servicio.nombre}
              </h2>
              <p class="text-neutral-700 mb-3">
                {servicio.descripcion}
              </p>
              <div class="flex flex-wrap gap-3 text-sm text-neutral-600">
                <span class="inline-flex items-center gap-1.5">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {servicio.duracion}
                </span>
                <span class="inline-flex items-center gap-1.5">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {servicio.modalidad}
                </span>
              </div>
            </div>
            <div class="flex-shrink-0 text-center md:text-right">
              <div class="text-3xl font-bold text-purple-600">
                {servicio.precio}
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Información adicional -->
    <section class="mt-12 bg-purple-50 rounded-2xl p-6 md:p-8">
      <h3 class="text-xl font-semibold text-slate-900 mb-4">Información importante</h3>
      <ul class="space-y-2 text-neutral-700">
        <li class="flex gap-2">
          <span class="text-purple-600 flex-shrink-0">•</span>
          <span>Las sesiones online se realizan por videollamada (Zoom, WhatsApp o Skype).</span>
        </li>
        <li class="flex gap-2">
          <span class="text-purple-600 flex-shrink-0">•</span>
          <span>Las esencias florales para seguimiento cuestan 12€ (envío incluido).</span>
        </li>
        <li class="flex gap-2">
          <span class="text-purple-600 flex-shrink-0">•</span>
          <span>El bono de 4 sesiones debe abonarse al inicio del periodo.</span>
        </li>
        <li class="flex gap-2">
          <span class="text-purple-600 flex-shrink-0">•</span>
          <span>Cancelaciones con menos de 24h de antelación no son reembolsables.</span>
        </li>
        <li class="flex gap-2">
          <span class="text-purple-600 flex-shrink-0">•</span>
          <span>Primera consulta orientativa gratuita de 15 minutos (por teléfono/WhatsApp).</span>
        </li>
      </ul>
    </section>

    <!-- CTA -->
    <div class="mt-10 text-center">
      <a 
        href={whatsapp}
        target="_blank"
        rel="noopener"
        class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-green-600 hover:bg-green-700 text-white text-lg font-medium rounded-xl transition-colors shadow-lg hover:shadow-xl">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        Reservar cita por WhatsApp
      </a>
      <p class="mt-4 text-sm text-neutral-600">
        ¿Tienes dudas? <a href={link("contacto/")} class="text-purple-600 underline hover:text-purple-700">Escríbeme</a> y te ayudo a elegir.
      </p>
    </div>

    <!-- Botón volver -->
    <div class="mt-12 text-center">
      <a 
        href={link("hero-b/")} 
        class="inline-flex items-center justify-center px-6 py-3 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg transition-colors duration-200 font-medium">
        ← Volver al Inicio
      </a>
    </div>
  </main>
</Base>
