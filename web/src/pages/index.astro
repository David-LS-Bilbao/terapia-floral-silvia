---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";
import SocialLinks from "../components/SocialLinks.astro";

/** Helper de rutas seguro para GitHub Pages o subcarpetas */
// @ts-ignore
const BASE: string = ((import.meta as any).env?.BASE_URL ?? "/").replace(/\/+$/, "/");
// @ts-ignore
const link = (p: string = "") => `${BASE}${p.replace(/^\/+/, "")}`;

/** Contacto (ajusta el número si cambias) */
const whatsapp =
  "https://wa.me/34687235652?text=Hola%20Silvia%2C%20me%20gustar%C3%ADa%20informaci%C3%B3n%2Fcita...";

/** Redes sociales */
const instagram = "https://www.instagram.com/silviaadameterapiasflores/";
const facebook = "https://www.facebook.com/terapiafloralsilvia";
const tiktok = "https://www.tiktok.com/@silviaadameterapiasflores";

/** Assets (colócalos en /public/home/…) */
const heroImg = "home/hero.webp";
const imgFlores = "home/servicio-flores.webp";
const imgMind   = "home/servicio-mindfulness.webp";

/** Links internos */
const linkServicios = link("servicios/");
const linkContacto  = link("contacto/");
---
<Base
  title="Terapias Naturales con Silvia Adame — Flores de Bach en Valle de Mena y online"
  description="Acompañamiento emocional con Flores de Bach y Mindfulness. Atención personal en la zona del Valle de Mena (Burgos) y también online."
>
  <Nav />

  <!-- HERO -->
  <header class="relative overflow-hidden">
    <!-- fondo suave -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="h-full w-full bg-[#FFF7F1]"></div>
      <div class="absolute -top-24 -right-24 w-80 h-80 rounded-full opacity-30 blur-3xl bg-[#9FB8AD]"></div>
      <div class="absolute -bottom-24 -left-12 w-72 h-72 rounded-full opacity-40 blur-3xl bg-[#C77DFF]"></div>
    </div>

    <!-- Contenido principal -->
    <section class="relative max-w-6xl mx-auto px-4 pt-16 pb-12">
      <div class="grid md:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-3xl md:text-4xl font-semibold text-slate-900 leading-tight">
            Bienestar emocional con <span class="text-[#9FB8AD]">Flores de Bach</span> y
            <span class="text-[#C77DFF]">Mindfulness</span>
          </h1>
          <p class="mt-4 text-slate-700">
            Acompañamiento cercano y personalizado. Sesiones en la zona del Valle de Mena (Burgos) y modalidad online.
          </p>

  

          <!-- Tira de info rápida -->
          <ul class="mt-6 text-sm text-slate-600 grid sm:grid-cols-3 gap-3">
            <li class="rounded-lg bg-white border border-slate-200 p-3">
              <p class="font-medium text-slate-800">Horario</p>
              <p>lunes a viernes · 10:00–20:00</p>
            </li>
            <li class="rounded-lg bg-white border border-slate-200 p-3">
              <p class="font-medium text-slate-800">Zona</p>
              <p>Valle de Mena & Online</p>
            </li>
            <li class="rounded-lg bg-white border border-slate-200 p-3">
              <p class="font-medium text-slate-800">Sígueme</p>
              <div class="mt-2">
                <SocialLinks
                  facebook={facebook}
                  instagram={instagram}
                  tiktok={tiktok}
                  class="text-slate-700 justify-start gap-3"
                  size={20}
                />
              </div>
            </li>
          </ul>
        </div>

        <!-- Ilustración -->
        <div class="order-first md:order-last">
          <div class="aspect-[4/3] rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
            <img
              src={link(heroImg)}
              alt="Terapias Naturales y Mindfulness"
              class="w-full h-full object-cover"
              width="1200" height="900" loading="lazy" decoding="async"
            />
          </div>
        </div>
      </div>
    </section>
  </header>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="max-w-6xl mx-auto px-4 py-12 space-y-12">

    <!-- Servicios principales -->
    <section>
      <h2 class="text-2xl font-semibold text-slate-900">Servicios</h2>
      <p class="mt-1 text-slate-600">Comienza por donde mejor encaje contigo.</p>

      <div class="mt-6 grid md:grid-cols-2 gap-6">

        <!-- Tarjeta Flores de Bach -->
        <a href={linkServicios} class="block group rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-md transition overflow-hidden">
          <div class="h-40 overflow-hidden bg-slate-100">
            <img
              src={link(imgFlores)}
              alt="Flores de Bach"
              class="w-full h-full object-cover"
              width="1200" height="400" loading="lazy" decoding="async"
            />
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-slate-900">Terapias Naturales · Flores de Bach</h3>
            <p class="mt-1 text-slate-600">
              Sesiones de acompañamiento emocional con esencias florales.
            </p>
            <div class="mt-3 text-sm text-[#7C3AED] underline">Ver detalles</div>
          </div>
        </a>

        <!-- Tarjeta Mindfulness (enlaza al bloque de mindfulness dentro de /servicios/) -->
        <a href={`${linkServicios}#mindfulness`} class="block group rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-md transition overflow-hidden">
          <div class="h-40 overflow-hidden bg-slate-100">
            <img
              src={link(imgMind)}
              alt="Mindfulness"
              class="w-full h-full object-cover"
              width="1200" height="400" loading="lazy" decoding="async"
            />
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-slate-900">Mindfulness</h3>
            <p class="mt-1 text-slate-600">
              Prácticas sencillas para reducir estrés y cultivar presencia.
            </p>
            <div class="mt-3 text-sm text-[#0F766E] underline">Ver detalles</div>
          </div>
        </a>
      </div>

      <!-- CTA secundaria: ancla de Flores en /servicios/ -->
      <div class="mt-8 mb-8 text-center">
        <a
          href={`${linkServicios}#flores`}
          aria-label="Explorar el apartado de Flores de Bach"
          class="inline-flex items-center gap-2 rounded-xl px-6 py-3 text-base font-medium text-white transition
                 bg-emerald-500 hover:bg-emerald-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 shadow-sm"
        >
          <!-- Icono flor -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 2c.9 0 1.7.5 2.1 1.3l1 1.7c.3.5.8.9 1.4 1l1.9.4a2.5 2.5 0 0 1 1.6 3.7l-1 1.6c-.3.5-.3 1.1 0 1.6l1 1.6a2.5 2.5 0 0 1-1.6 3.7l-1.9.4c-.6.1-1.1.5-1.4 1l-1 1.7A2.5 2.5 0 0 1 12 22a2.5 2.5 0 0 1-2.1-1.3l-1-1.7c-.3-.5-.8-.9-1.4-1l-1.9-.4a2.5 2.5 0 0 1-1.6-3.7l1-1.6c.3-.5.3-1.1 0-1.6l-1-1.6A2.5 2.5 0 0 1 5.7 6.4l1.9-.4c.6-.1 1.1-.5 1.4-1l1-1.7A2.5 2.5 0 0 1 12 2Zm0 6.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Z"/>
          </svg>
          Explorar Flores de Bach
          <span aria-hidden="true">→</span>
        </a>
      </div>
    </section>

    <!-- Bloque final con CTA -->
    <section class="rounded-2xl bg-white border border-slate-200 p-6 text-center">
      <h3 class="text-xl font-semibold text-slate-900">¿Empezamos?</h3>
      <p class="mt-1 text-slate-600">
        Escríbeme y te explico cómo trabajamos y cuál puede ser el siguiente paso.
      </p>
      <div class="mt-4">
        <a
          href={whatsapp}
          class="inline-block px-5 py-3 rounded-xl bg-[#9FB8AD] text-white font-medium shadow hover:opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Pedir cita por WhatsApp
        </a>
      </div>
      <p class="mt-3 text-xs text-slate-500">
        Aviso: este acompañamiento no sustituye diagnóstico ni tratamiento médico profesional.
      </p>
    </section>
  </main>
</Base>
