---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";
import { flores, gruposOrden, rescueRemedy } from "../data/flores";

const base = (import.meta as any).env?.BASE_URL || "/";


// Contacto (usa los definitivos que ya manejas)
const whatsapp = "https://wa.me/34687235652?text=Hola%20Silvia%2C%20me%20gustar%C3%ADa%20informaci%C3%B3n%2Fcita...";

// Links internos
const linkServicios = `${base}servicios/`;
const heroImg = "home/hero.webp";
const servicioFloresImg = "home/servicio-flores.png";
const servicioMindfulnessImg = "home/servicio-mindfulness.webp";

const linkQueEs = `${base}que-es/`;
const linkMindfulness = `${base}mindfulness/`;
const linkContacto = `${base}contacto/`;
const linkFlores = `${base}flores/`; // lo puedes comentar si aún no existe
---

<Base
  title="Terapia Floral Silvia Adame — Flores de Bach en Valle de Mena y online"
  description="Acompañamiento emocional con Flores de Bach y Mindfulness. Atención  personal en la zona del Valle de Mena (Burgos) y tambien online."
>
  <Nav />

  <!-- HERO -->
  <header class="relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">

      <!-- fondo suave -->
      <div class="h-full w-full bg-[#FFF7F1]" />
      <div class="absolute -top-24 -right-24 w-80 h-80 rounded-full opacity-30 blur-3xl bg-[#9FB8AD]" />
      <div class="absolute -bottom-24 -left-12 w-72 h-72 rounded-full opacity-40 blur-3xl bg-[#C77DFF]" />
    </div>

    <!-- Contenido principal -->
    <section class="relative max-w-6xl mx-auto px-4 pt-16 pb-12">
      <div class="grid md:grid-cols-2 gap-10 items-center">
        <div>
          <h1 class="text-3xl md:text-4xl font-semibold text-slate-900 leading-tight">
            Bienestar emocional con <span class="text-[#9FB8AD]">Flores de Bach</span> y <span class="text-[#C77DFF]">Mindfulness</span>
          </h1>
          <p class="mt-4 text-slate-700">
            Acompañamiento cercano y personalizado. Sesiones en la zona del Valle de Mena (Burgos) y modalidad online.
          </p>

          <div class="mt-6 flex flex-wrap gap-3">
            <a
              href={whatsapp}
              class="px-5 py-3 rounded-xl bg-[#9FB8AD] text-white font-medium shadow hover:opacity-90"
              aria-label="Abrir WhatsApp para contactar con Silvia"
            >
              Pedir cita por WhatsApp
            </a>
            <a
              href={linkQueEs}
              class="px-5 py-3 rounded-xl bg-white text-slate-800 border border-slate-200 hover:bg-slate-50"
            >
              ¿Qué es la Terapia Floral?
            </a>
          </div>

          <!-- Tira de info rápida -->
          <ul class="mt-6 text-sm text-slate-600 grid sm:grid-cols-3 gap-3">
            <li class="rounded-lg bg-white border border-slate-200 p-3">
              <p class="font-medium text-slate-800">Horario</p>
              <p>lunes a Viernes · de 10:00 a 20:00</p>
            </li>
            <li class="rounded-lg bg-white border border-slate-200 p-3">
              <p class="font-medium text-slate-800">Zona</p>
              <p>Valle de Mena & Online</p>
            </li>
            <li class="rounded-lg bg-white border border-slate-200 p-3">
              <p class="font-medium text-slate-800">Contacto</p>
              <a class="underline" href={linkContacto}>Ver opciones</a>
            </li>
          </ul>
        </div>

        <!-- Ilustración / placeholder -->
     <div class="order-first md:order-last">
  <div class="aspect-[4/3] rounded-2xl border border-slate-200 bg-white shadow-sm overflow-hidden">
    <img
      src={`${base}${heroImg}`}
      alt="Terapia Floral y Mindfulness"
      class="w-full h-full object-cover"
      width="1200" height="900" loading="lazy"
    />
  </div>
</div>
    </section>
  </header>

  <!-- BLOQUES PRINCIPALES -->
  <main class="max-w-6xl mx-auto px-4 py-12 space-y-12">



    <!-- Tarjetas: Servicios principales -->
    <section>
      <h2 class="text-2xl font-semibold text-slate-900">Servicios</h2>
      <p class="mt-1 text-slate-600">Comienza por donde mejor encaje contigo.</p>

      <div class="mt-6 grid md:grid-cols-2 gap-6">

        <!-- Tarjeta Flores de Bach -->
        <a href={linkServicios} class="block group rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-md transition overflow-hidden">
          <div class="h-40 overflow-hidden bg-slate-100">
              <img
                src={`${base}${servicioFloresImg}`}
                alt="Flores de Bach"
                class="w-full h-full object-cover"
                width="1200" height="400" loading="lazy"
              />
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-slate-900">Terapia Floral · Flores de Bach</h3>
            <p class="mt-1 text-slate-600">
              Sesiones de acompañamiento emocional con esencias florales.
            </p>
            <div class="mt-3 text-sm text-[#7C3AED] underline">
              Ver detalles
            </div>
          </div>
        </a>

        <!-- Tarjeta Mindfulness -->
        <a href={linkMindfulness} class="block group rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-md transition overflow-hidden">
         <div class="h-40 overflow-hidden bg-slate-100">
                  <img
                    src={`${base}${servicioMindfulnessImg}`}
                    alt="Mindfulness"
                    class="w-full h-full object-cover"
                    width="1200" height="400" loading="lazy"
                  />


          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold text-slate-900">Mindfulness</h3>
            <p class="mt-1 text-slate-600">
              Prácticas sencillas para reducir estrés y cultivar presencia.
            </p>
            <div class="mt-3 text-sm text-[#0F766E] underline">
              Ver detalles
            </div>
          </div>
        </a>
      </div>

      <!-- CTA secundaria a la sección de Flores (catálogo) -->
      <div class="mt-8 mb-8 text-center">
        <a
          href={linkFlores}
          aria-label="Explorar el catálogo de Flores de Bach"
          class="inline-flex items-center gap-2 rounded-xl px-6 py-3 text-base font-medium text-white transition
                 bg-emerald-500 hover:bg-emerald-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2
                 shadow-sm"
        >
          <!-- Icono flor -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 2c.9 0 1.7.5 2.1 1.3l1 1.7c.3.5.8.9 1.4 1l1.9.4a2.5 2.5 0 0 1 1.6 3.7l-1 1.6c-.3.5-.3 1.1 0 1.6l1 1.6a2.5 2.5 0 0 1-1.6 3.7l-1.9.4c-.6.1-1.1.5-1.4 1l-1 1.7A2.5 2.5 0 0 1 12 22a2.5 2.5 0 0 1-2.1-1.3l-1-1.7c-.3-.5-.8-.9-1.4-1l-1.9-.4a2.5 2.5 0 0 1-1.6-3.7l1-1.6c.3-.5.3-1.1 0-1.6l-1-1.6A2.5 2.5 0 0 1 5.7 6.4l1.9-.4c.6-.1 1.1-.5 1.4-1l1-1.7A2.5 2.5 0 0 1 12 2Zm0 6.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Z"/>
          </svg>
          Explorar Flores de Bach
          <span aria-hidden="true">→</span>
        </a>
      </div>


    <!-- Bloque final con CTA -->
    <section class="rounded-2xl bg-white border border-slate-200 p-6 text-center">
      <h3 class="text-xl font-semibold text-slate-900">¿Empezamos?</h3>
      <p class="mt-1 text-slate-600">
        Escríbeme y te explico cómo trabajamos y cuál puede ser el siguiente paso.
      </p>
      <div class="mt-4">
        <a
          href={whatsapp}
          class="inline-block px-5 py-3 rounded-xl bg-[#9FB8AD] text-white font-medium shadow hover:opacity-90"
        >
          Pedir cita por WhatsApp
        </a>
      </div>
    </section>
  </main>
</Base>



