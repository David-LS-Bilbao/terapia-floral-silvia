---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";

// @ts-ignore
const BASE = ((import.meta as any).env?.BASE_URL ?? "/").replace(/\/+$/, "/");
// @ts-ignore
const link = (p="") => `${BASE}${p.replace(/^\/+/, "")}`;
const heroImg = "home/servicio-mindfulness.webp";
const logoLotus = "brand/logo-lotus.png";
const whatsapp = "https://wa.me/34687235652?text=Hola%20Silvia%2C%20me%20gustar%C3%ADa%20informaci%C3%B3n%2Fcita...";
const linkServicios = link("servicios/");
---
<Base title="Hero B — Demo" description="Demo minimal del hero">
  <Nav />
<header class="relative isolate min-h-[90vh] overflow-hidden">
  <!-- Imagen de fondo a pantalla completa -->
  <img
    src={link(heroImg)}
    alt="Meditación al atardecer en la playa"
    class="absolute inset-0 -z-10 h-full w-full object-cover"
    width="2400" height="1600" loading="eager" decoding="async"
  />

  <!-- Degradado para legibilidad del texto -->
  <div class="absolute inset-0 -z-10 bg-[linear-gradient(90deg,rgba(7,12,20,0.72)_0%,rgba(7,12,20,0.48)_42%,rgba(7,12,20,0.18)_62%,rgba(255,255,255,0)_100%)]"></div>

  <section class="relative mx-auto max-w-6xl px-4 py-16 md:py-24 flex items-center justify-center min-h-[80vh]">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Logo Lotus centrado en la parte superior -->
      <div class="mb-8 flex justify-center">
        <div class="w-40 h-40 md:w-52 md:h-52 flex items-center justify-center">
          <img
            src={link(logoLotus)}
            alt="Logo Terapias Naturales Silvia Adame - Flor de Loto"
            class="w-full h-full object-contain filter drop-shadow-[0_4px_20px_rgba(0,0,0,.4)]"
            width="200" height="200" loading="eager" decoding="async"
          />
        </div>
      </div>

      <!-- Eyebrow opcional -->
      <p class="eyebrow text-white text-center text-[clamp(0.875rem,2.5vw,1.125rem)] font-medium tracking-wide mb-4">Terapias naturales y acompañamiento emocional con Silvia Adame</p>

      <h1 class="brand-title text-[clamp(1.75rem,4vw,3.5rem)] leading-[1.15] text-white drop-shadow-[0_2px_10px_rgba(0,0,0,.25)] text-center mx-auto max-w-4xl font-bold mb-6">
        Bienestar emocional con <span class="text-white">Flores de Bach y Mindfulness</span>
      </h1>

      <p class="brand-text text-white text-[clamp(0.95rem,2.5vw,1.125rem)] leading-relaxed text-center max-w-3xl mx-auto mb-8">
        "Bienestar Integral y Equilibrio Emocional. Te acompaño en el camino hacia la serenidad y el autoconocimiento a través de terapias naturales. Mi enfoque combina la técnica de la Atención Plena (Mindfulness), que ayuda a reducir el estrés y la ansiedad y a centrarte en el momento presente, con la Terapia Floral de Bach, un sistema vibracional diseñado para armonizar la personalidad y restaurar tu equilibrio psicoemocional. Recuerda que la práctica continua y tu compromiso son clave para lograr la transformación."
      </p>

      <div class="flex flex-wrap gap-4 justify-center items-center">
        <a href={whatsapp}
           class="brand-text rounded-xl bg-[color:var(--brand)] px-6 py-3 md:px-8 md:py-4 text-white font-medium text-[clamp(0.875rem,2.5vw,1rem)] hover:opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 transition-opacity">
          Pedir cita
        </a>
        <a href={linkServicios}
           class="brand-text rounded-xl border border-white/30 bg-white/10 px-6 py-3 md:px-8 md:py-4 text-white backdrop-blur-md text-[clamp(0.875rem,2.5vw,1rem)] hover:bg-white/15 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 transition-all">
          Ver servicios
        </a>
      </div>
    </div>
  </section>
</header>
</Base>

