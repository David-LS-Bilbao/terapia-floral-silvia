---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";

// @ts-ignore
const BASE = ((import.meta as any).env?.BASE_URL ?? "/").replace(/\/+$/, "/");
// @ts-ignore
const link = (p="") => `${BASE}${p.replace(/^\/+/, "")}`;

// Cambia si tu imagen está en otra ruta
const heroImg = "home/hero.webp";

// WhatsApp y Servicios (ajusta el teléfono)
const whatsapp = "https://wa.me/34687235652?text=Hola%20Silvia%2C%20me%20gustar%C3%ADa%20informaci%C3%B3n%2Fcita...";
const linkServicios = link("servicios/");
---
<Base title="Hero A — Demo" description="Demo del hero a pantalla completa">
  <Nav />
  <!-- HERO FULL-BLEED: Variante A -->
  <header class="relative isolate min-h-[86vh] overflow-hidden">
    <img src={link(heroImg)} alt="Meditación al atardecer" class="absolute inset-0 -z-10 h-full w-full object-cover" width="2400" height="1600" />
    <div class="absolute inset-0 -z-10 bg-[linear-gradient(90deg,rgba(17,24,39,0.65)_0%,rgba(17,24,39,0.35)_35%,rgba(17,24,39,0.10)_60%,rgba(255,255,255,0)_100%)]"></div>
    <div class="absolute inset-0 -z-10 bg-[#FFF7F1]/30"></div>

    <div class="pointer-events-none absolute -left-24 -bottom-24 h-[28rem] w-[28rem] rounded-full bg-[#C77DFF]/40 blur-[100px]"></div>
    <div class="pointer-events-none absolute -right-24 -top-24 h-[26rem] w-[26rem] rounded-full bg-[#9FB8AD]/40 blur-[110px]"></div>

    <section class="relative mx-auto max-w-6xl px-4 py-16 md:py-24">
      <div class="grid items-center gap-10 md:grid-cols-2">
        <div>
          <h1 class="brand-title text-3xl md:text-5xl font-semibold leading-tight text-white">
            Bienestar emocional con <span class="text-[#9FB8AD]">Flores de Bach</span> y <span class="text-[#C77DFF]">Mindfulness</span>
          </h1>
          <p class="brand-text mt-4 text-base md:text-lg text-white/90 max-w-xl">
            Acompañamiento cercano y personalizado. Sesiones en el Valle de Mena (Burgos) y online.
          </p>
          <div class="mt-6 flex flex-wrap gap-3">
            <a href={whatsapp} class="brand-text inline-flex items-center justify-center rounded-xl bg-[#3B755F] px-5 py-3 text-white font-medium shadow hover:opacity-90">Pedir cita por WhatsApp</a>
            <a href={linkServicios} class="brand-text inline-flex items-center justify-center rounded-xl border border-white/30 bg-white/10 px-5 py-3 text-white backdrop-blur-md hover:bg-white/15">Ver servicios</a>
          </div>
          <ul class="mt-6 grid gap-3 text-sm sm:grid-cols-3">
            <li class="rounded-lg border border-white/25 bg-white/10 p-3 text-white/90 backdrop-blur-md"><p class="brand-text font-medium text-white">Horario</p><p class="brand-text">lunes a viernes · 10:00–20:00</p></li>
            <li class="rounded-lg border border-white/25 bg-white/10 p-3 text-white/90 backdrop-blur-md"><p class="brand-text font-medium text-white">Zona</p><p class="brand-text">Valle de Mena & Online</p></li>
            <li class="rounded-lg border border-white/25 bg-white/10 p-3 text-white/90 backdrop-blur-md"><p class="brand-text font-medium text-white">Sígueme</p><p class="brand-text">Instagram · Facebook · TikTok</p></li>
          </ul>
        </div>
        <div class="hidden md:block">
          <div class="rounded-2xl border border-white/20 bg-white/5 p-4 backdrop-blur-md shadow-[0_10px_40px_rgba(0,0,0,0.25)]">
            <img src={link(heroImg)} alt="Terapia floral y mindfulness" class="h-[420px] w-full rounded-xl object-cover" width="1200" height="900" />
          </div>
        </div>
      </div>
    </section>
  </header>
</Base>
