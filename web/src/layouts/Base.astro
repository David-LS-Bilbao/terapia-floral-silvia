---
/// <reference types="astro/client" />

import "../styles/global.css";




interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Terapia Floral Silvia Adame",
  description = "Flores de Bach en Bizkaia y online."
} = Astro.props;

// Helper para respetar el base path en GitHub Pages
const withBase = (path?: string): string => {
  // Para desarrollo local usamos "/" y para producción GitHub Pages usa "/terapia-floral-silvia/"
  const base = "/terapia-floral-silvia/";
  if (!path) return base;
  return base + path;
};
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>






  <body class="bg-[#FFF7F1] text-slate-800">
    <slot />

    <footer class="bg-slate-900 text-slate-100 mt-16">
      <div class="max-w-6xl mx-auto px-4 py-8 text-sm flex flex-wrap gap-6 justify-between items-center">
        <div>© 2025 Terapia Floral Silvia Adame</div>

        <nav class="flex gap-4 underline text-slate-300">
          <a href={withBase("legal/aviso-legal/")}>Aviso legal</a>
          <a href={withBase("legal/privacidad/")}>Privacidad</a>
          <a href={withBase("legal/cookies/")}>Cookies</a>
        </nav>

        <div class="text-slate-300">
          Página creada por <strong>David-LS-Bilbao</strong>. Contacto
          <a class="underline" href="mailto:lopezsotelo77@gmail.com">lopezsotelo77@gmail.com</a>
        </div>
      </div>
    </footer>
  </body>
</html>

