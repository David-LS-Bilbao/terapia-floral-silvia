---
// @ts-ignore
/// <reference types="astro/client" />

import "../styles/global.css";




interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Terapia Floral Silvia Adame",
  description = "Flores de Bach en Bizkaia y online."
} = Astro.props;

// Helper para respetar el base path en GitHub Pages
const withBase = (path?: string): string => {
  const base = (import.meta as any).env?.BASE_URL || "/";
  if (!path) return base;
  return base.endsWith('/') ? base + path : base + '/' + path;
};
---
<html lang="es">
  <head>

<!-- Tipografías de marca -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Favicon y iconos -->
    <link rel="icon" type="image/x-icon" href={withBase("favicon.ico")} />
    <link rel="icon" type="image/png" sizes="192x192" href={withBase("icon-192.png")} />
    <link rel="apple-touch-icon" href={withBase("icon-192.png")} />
    <link rel="mask-icon" href={withBase("maskable-512.png")} color="#9FB8AD" />
    
    <!-- Meta tags para redes sociales -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={withBase("og-image-1200x630.png")} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Terapia Floral Silvia Adame" />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={withBase("og-image-1200x630.png")} />
    
    <!-- Theme color -->
    <meta name="theme-color" content="#9FB8AD" />
    <meta name="msapplication-TileColor" content="#9FB8AD" />


    
<style>
  :root{
    --brand:#3B755F; --sage:#9FB8AD; --lav:#C77DFF; --ink:#0B1220; 
  }
  .brand-title{
    font-family:"Fraunces", ui-serif, Georgia, "Times New Roman", serif;
    font-weight:700;
    font-optical-sizing:auto;
    letter-spacing:-0.01em;           /* compensa la serif display */
  }
  .brand-text{
    font-family:Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
  }
  .eyebrow{
    font-family:Inter, system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
    text-transform:uppercase; letter-spacing:.08em; font-weight:600; font-size:.78rem;
  }
</style>


  </head>






  <body class="bg-[#FFF7F1] text-slate-800">
    <slot />

    <footer class="bg-slate-900 text-slate-100 mt-16">
      <div class="max-w-6xl mx-auto px-4 py-8 text-sm flex flex-wrap gap-6 justify-between items-center">
        <div class="flex items-center gap-2">
          <img 
            src={withBase("brand/logo3d-64.webp")} 
            alt="Logo" 
            width="24" 
            height="24" 
            class="w-6 h-6 rounded opacity-80"
            loading="lazy"
          />
          <span>© 2025 Terapia Floral Silvia Adame</span>
        </div>

        <nav class="flex gap-4 underline text-slate-300">
          <a href={withBase("legal/aviso-legal/")}>Aviso legal</a>
          <a href={withBase("legal/privacidad/")}>Privacidad</a>
          <a href={withBase("legal/cookies/")}>Cookies</a>
        </nav>

        <div class="text-slate-300">
          Página creada por <strong>David-LS-Bilbao</strong>. Contacto
          <a class="underline" href="mailto:lopezsotelo77@gmail.com">lopezsotelo77@gmail.com</a>
        </div>
      </div>
    </footer>
  </body>
</html>

