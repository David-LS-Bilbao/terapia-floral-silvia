---
interface Props {
  size?: 'small' | 'medium' | 'large' | 'xlarge';
  class?: string;
  priority?: boolean;
}

const { size = 'medium', class: className = '', priority = false } = Astro.props;

const base = (import.meta as any).env?.BASE_URL || "/";

// Mapeo de tama√±os a archivos y dimensiones
const sizeMap = {
  small: { file: 'logo3d-64.webp', width: 32, height: 32, class: 'w-8 h-8' },
  medium: { file: 'logo3d-128.webp', width: 64, height: 64, class: 'w-16 h-16' },
  large: { file: 'logo3d-256.webp', width: 128, height: 128, class: 'w-32 h-32' },
  xlarge: { file: 'logo3d-512.webp', width: 256, height: 256, class: 'w-64 h-64' }
};

const config = sizeMap[size];
---
<img 
  src={`${base}brand/${config.file}`}
  alt="Logo Terapias Naturales Silvia Adame"
  width={config.width}
  height={config.height}
  class={`${config.class} ${className} rounded-lg shadow-sm`}
  loading={priority ? 'eager' : 'lazy'}
  decoding="async"
/>
