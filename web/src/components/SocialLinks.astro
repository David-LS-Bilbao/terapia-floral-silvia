---
interface Props {
  facebook?: string;
  instagram?: string;
  tiktok?: string;
  class?: string;
  size?: number;
}
const { facebook, instagram, tiktok, class:klass = "", size = 22 } = Astro.props;
// Usar clases fijas de Tailwind en lugar de din√°micas
const iconCls = size <= 16 ? "w-4 h-4" : size <= 20 ? "w-5 h-5" : size <= 24 ? "w-6 h-6" : size <= 32 ? "w-8 h-8" : "w-12 h-12";
---
<nav class={`flex items-center gap-4 ${klass}`} aria-label="Redes sociales">
  {facebook && (
    <a href={facebook} target="_blank" rel="noopener" aria-label="Facebook" class="opacity-80 hover:opacity-100 transition">
      <svg viewBox="0 0 24 24" class={iconCls} fill="currentColor" aria-hidden="true"><path d="M22 12a10 10 0 1 0-11.6 9.9v-7h-2.2V12h2.2V9.8c0-2.2 1.3-3.4 3.3-3.4.95 0 1.95.17 1.95.17v2.1h-1.1c-1.1 0-1.5.69-1.5 1.4V12h2.6l-.41 2.9h-2.2v7A10 10 0 0 0 22 12z"/></svg>
    </a>
  )}
  {instagram && (
    <a href={instagram} target="_blank" rel="noopener" aria-label="Instagram" class="opacity-80 hover:opacity-100 transition">
      <svg viewBox="0 0 24 24" class={iconCls} fill="currentColor" aria-hidden="true"><path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3zm10.5 2.75a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5M12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10m0 2a3 3 0 1 0 .001 6.001A3 3 0 0 0 12 9z"/></svg>
    </a>
  )}
  {tiktok && (
    <a href={tiktok} target="_blank" rel="noopener" aria-label="TikTok" class="opacity-80 hover:opacity-100 transition">
      <svg viewBox="0 0 24 24" class={iconCls} fill="currentColor" aria-hidden="true"><path d="M12.5 3h2c.3 2.2 1.6 3.6 3.7 4v2.1c-1.3.1-2.5-.3-3.7-1v6.4a5.5 5.5 0 1 1-5.5-5.5c.2 0 .4 0 .5.1v2.2a3.3 3.3 0 1 0 3.3 3.3z"/></svg>
    </a>
  )}
</nav>
