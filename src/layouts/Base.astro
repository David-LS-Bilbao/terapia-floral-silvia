---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Terapia Floral Silvia Adame",
  description = "Flores de Bach en Bizkaia y online."
} = Astro.props;

// Helper para respetar el base path en GitHub Pages
const withBase = (path: string) => {
  const base = import.meta.env.BASE_URL || "/";
  return base + path.replace(/^\/+/, "");
};
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-[#FFF7F1] text-slate-800">
    <slot />

    <footer class="bg-slate-900 text-slate-100 mt-16">
      <div class="max-w-6xl mx-auto px-4 py-8 text-sm flex flex-wrap gap-6 justify-between">
        <div>Â© {new Date().getFullYear()} Terapia Floral Silvia Adame</div>

        <nav class="flex gap-4 underline text-slate-300">
          <a href={withBase("legal/aviso-legal/")}>Aviso legal</a>
          <a href={withBase("legal/privacidad/")}>Privacidad</a>
          <a href={withBase("legal/cookies/")}>Cookies</a>
        </nav>
      </div>
    </footer>
  </body>
</html>

